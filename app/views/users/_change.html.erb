<div class="change">
  <%= form_for @new_user do |f|%>
      <%= f.label 'Name' %>
      <%= f.text_field :name %>
      <%= f.label 'Username' %>
      <%= f.text_field :username %>
      <%= f.label 'Password' %>
      <%= f.password_field :password %>
      <%= f.label 'Confirm Password' %>
      <%= password_field_tag :confirm_password %>
      <%= f.submit 'Save' %>
  <% end %>
</div>