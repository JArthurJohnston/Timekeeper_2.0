<div class="summary">
    <%= @story_card.display_string %>
    <%= @story_card.actual_estimate_string %>
</div>
<div>
  <p>Status: </p>
  <p><%= @story_card.status_string %></p>
</div>
<h1>Activities</h1>
<ul>
  <% @story_card.activities.each do |each_activity| %>
      <li>
        <div>
          <%= each_activity.display_string %>
        </div>
      </li>
  <% end %>
</ul>

<% content_for :buttons_bar do %>
    <%= link_to edit_user_project_story_card_path(@user.id, @story_card.project_id, @story_card.id) do %>
        <div class="edit-button">Edit</div>
    <% end %>
    <%= link_to user_project_story_card_path(@user.id, params[:project_id], @story_card.id), method: :delete do %>
        <div class="delete-button">Delete</div>
    <% end %>
<% end %>
