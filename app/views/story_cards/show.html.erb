<div class="summary">
    <%= @story_card.display_string %>
    <%= @story_card.actual_estimate_string %>
</div>
<h1>Activities</h1>
<ul>
  <% @story_card.activities.each do |each_activity| %>
      <li>
        <div>
          <%= each_activity.display_string %>
        </div>
      </li>
  <% end %>
  <li>
    <%= link_to edit_user_project_story_card_path(@user.id, @story_card.project_id, @story_card.id) do %>
        <div class="new-button">Edit</div>
    <% end %>
  </li>
</ul>
