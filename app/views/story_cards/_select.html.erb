<div class="project-select">
  <%= form_for :project_select, url: @project_select_path, method: :get do |f| %>
    <%= f.collection_select(:selected_project, @projects, :id, :name, {:selected => @project.id}, :onchange => "this.form.submit()", selected: @project) %>
  <% end %>
</div>
<div class="selected-project-story-cards">
  <ul>
    <% @story_cards.each do |each_story_card| %>
        <li>
          <%= link_to user_project_story_card_path(@user.id, @project.id, each_story_card.id) do %>
              <div><%= each_story_card.display_string %></div>
          <% end %>
        </li>
    <% end %>
  </ul>
</div>