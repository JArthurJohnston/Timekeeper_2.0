<div class="summary">
  <h3>Start:</h3>
  <div><%= @activity.start_time %></div>
  <h3>End:</h3>
  <div>
    <%= @activity.end_time.nil? ? '--' : @activity.start_time %>
  </div>
  <h3>Story Card</h3>
  <%= link_to user_project_story_card_path(@user.id, @activity.project.id, @activity.story_card_id) do %>
      <div>
        <%= @activity.story_card.display_string %>
      </div>
  <% end %>
</div>